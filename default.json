{
    "extends": [
      ":dependencyDashboard",
      ":semanticPrefixFixDepsChoreOthers",
      ":ignoreModulesAndTests",
      ":autodetectPinVersions",
      ":prConcurrentLimit20",
      "group:monorepos",
      "group:recommended",
      "workarounds:all",
      "npm:unpublishSafe"
    ],
    "prHourlyLimit": 0,
    "assignees": [ "DeadClap" ],
    "updateLockFiles": false,
    "labels": ["Dependencies"],
    "packageRules": [
     {
       "matchUpdateTypes": ["major"],
        "labels": ["Dependencies", "DEPS-MAJOR"]
      },
      {
        "matchUpdateTypes": ["minor"],
       "labels": [ "Dependencies", "DEPS-MINOR"]
     },
     {
       "matchUpdateTypes": ["patch"],
       "labels": [ "Dependencies", "DEPS-PATCH"]
     },
     {
       "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true
      }
    ]
  }